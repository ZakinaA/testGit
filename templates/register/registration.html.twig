{% extends 'basePublic.html.twig' %}

 {% block contenuPublic %}
                  
			        	{{ form_start(form) }}

                  <div class="form-group">
						      {{ form_row(form.email, {'attr' : {'class' : 'input-material'}}) }}  
                  </div>

                  <div class="form-group">
					        {{ form_row(form.password, {'attr' : {'class' : 'input-material'}}) }} 
                  </div>

					        <div class="form-group">
					        {{ form_row(form.nom, {'attr' : {'class' : 'input-material'}}) }}
                  </div>

					        <div class="form-group">
					        {{ form_row(form.prenom, {'attr' : {'class' : 'input-material'}}) }}
                  </div>

					        <div class="form-group">
					        {{ form_row(form.specialite, {'attr' : {'class' : 'input-material'}}) }}
                  </div>

       

                  <!--div class="form-group"-->
					        {#{ form_row(form.dateNaiss, {'attr' : {'class' : 'input-material'}}) }#}
