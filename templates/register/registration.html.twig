                  </div>

                  <div class="form-group">
                  <button id="register" type="submit" name="registerSubmit" class="btn btn-primary">Enregistrer</button>
                  </div>
                  
                  <small>Vous avez déjà un compte ? </small><a href="{{ path('app_login') }}" class="signup">Login</a>
				        
                {{ form_end(form) }}		   
          {% endblock %}
   