{% extends "baseAdmin.html.twig" %}
{% block titreContenu %}Liste des stages à affecter{% endblock %}


{% block contenu%}

{#{ include('./promotion/listPromos.html.twig') }#}
</br>
     <div class="col-lg-12">
                  <div class="card">        
                    <div class="card-body">

                      <div class="table-responsive">   
                        <table class="table table-striped table-sm">
                          <thead>
                            <tr>
                              <th>Etudiant</th>
                              <th>Année</th>
                              <th>Entreprise</th>
                              <th>Nom tuteur</th>
                              <th>Enseignant en charge du suivi </th>
                                <th>Sélectionner </th>
                              
                            </tr>
                          </thead>
                          <tbody>
                           {{ form_start(form)}}  
                           {% for etudiant in etudiants  %} 

                             {% for stage in etudiant.stages  %}  
                            
                              {% if stage is defined %}
                              <tr>
                                <th scope="row"><a href="{{ path('stageShow', { 'idStage': stage.id }) }}">{{stage.etudiant.prenom}} {{stage.etudiant.nom}} </a></th>
                                <td>{{stage.etudiant.niveau.nom}}</td>
                                <td>{{stage.nomEntreprise}}</td>
                                <td>{{stage.nomTuteur }}</td>
                                 {% if stage.enseignant != null %}
                                    <td>{{stage.enseignant.prenom}} {{stage.enseignant.nom}}</td>
                                  {% else %}
                                    <td> à définir</td>
                                {% endif %}


                                <td> </td>
                            </tr>
                           {% endif %}
                            {% endfor %}
                            {% endfor %}
                         </tbody>
                        </table>

              
                            <div class="form-group row">
                                <div class="col-sm-11">
                                    <div class="row">
                                        <div class="col-md-5">
                                            {{ form_row(form.enseignant, {'attr' : {'class' : 'form-control'}}) }} 
                                        </div>
                                        <div class="col-md-4">
                                            {{ form_row(form.affecter, {'attr' : {'class' : 'form-control'}}) }} 
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>
              {{ form_end(form) }}





                      </div>
                    </div>
                  </div>
                </div>      
{% endblock %}
